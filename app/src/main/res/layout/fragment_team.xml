<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.setyo.kotlin.footballmatchschedule5.fragment.team.FragmentTeam">

    <Spinner
        android:layout_width="match_parent"
        android:foregroundGravity="center_horizontal"
        android:id="@+id/spinner_team"
        android:layout_height="40dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/spinner_team"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerviewteam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>



    </RelativeLayout>


    <ProgressBar
        android:id="@+id/progressbarteam"
        android:layout_width="wrap_content"
        android:layout_below="@+id/spinner_team"
        android:foregroundGravity="top"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
